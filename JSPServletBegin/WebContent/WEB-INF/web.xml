<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>JSPServletBegin</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
  	<servlet-name>getMethod_1</servlet-name>
  	<servlet-class>chap02.GetMethod_1</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>getMethod_1</servlet-name>
  	<url-pattern>/getMethod_1.do</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>postMethod_2</servlet-name>
  	<servlet-class>chap02.PostMethod_2</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>postMethod_2</servlet-name>
  	<url-pattern>/postMethod_2.do</url-pattern>
  </servlet-mapping>  
  

  <servlet>
  	<servlet-name>getpostMethod_3</servlet-name>
  	<servlet-class>chap02.GetPostMethod_3</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>getpostMethod_3</servlet-name>
  	<url-pattern>/getpostMethod_3.do</url-pattern>
  </servlet-mapping> 
  
  
  <filter>
  	<filter-name>setCharacterEncoding</filter-name>
  	<filter-class>my.filter.MyFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>setCharacterEncoding</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- ========= MyDBCP Setting Start  ===========  -->
  <resource-ref>
 	<description>Oracle Datasource example</description>
 	<res-ref-name>jdbc/jspbegin_oracle</res-ref-name>
 	<res-type>javax.sql.DataSource</res-type>
 	<res-auth>Container</res-auth>
  </resource-ref>
  <!-- ========= MyDBCP Setting End  ===========  -->
  
</web-app>






